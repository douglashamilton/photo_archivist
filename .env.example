# Application Settings
APP_NAME="Photo Archivist"
APP_HOST="127.0.0.1"
APP_PORT=8000
DEBUG=false
SECRET_KEY="your-secret-key-here"  # Change in production!

# Database
DATABASE_URL="sqlite+aiosqlite:///./photo_archive.db"

# Microsoft Authentication (MSAL)
MSAL_CLIENT_ID="your-client-id"  # From Azure App registration
MSAL_CLIENT_SECRET="your-client-secret"
MSAL_TENANT_ID="your-tenant-id"
MSAL_AUTHORITY="https://login.microsoftonline.com/{tenant_id}"
MSAL_REDIRECT_PATH="/auth/callback"

# OneDrive Graph API
GRAPH_API_VERSION="v1.0"
GRAPH_PHOTO_FOLDER_ID="your-onedrive-folder-id"  # Root folder for photo scan

# Kite Print API (Test Mode)
KITE_API_KEY="your-test-api-key"
KITE_API_SECRET="your-test-api-secret"
KITE_TEST_MODE=true  # Keep true for sandbox testing
KITE_API_BASE_URL="https://api.kite.ly/v4.0"

# Sync Settings
SYNC_INTERVAL_MINUTES=43200  # 30 days (monthly)
MAX_RETRIES=3
BACKOFF_FACTOR=2
MAX_PHOTOS_PER_PAGE=200

# Scoring Settings
SHORTLIST_SIZE=20
DUPE_THRESHOLD=5  # pHash Hamming distance
MIN_SHARPNESS_SCORE=0.5
MIN_EXPOSURE_SCORE=0.5

# Security
COOKIE_MAX_AGE=3600  # 1 hour
COOKIE_NAME="photo_archivist_session"
ENCRYPTION_KEY="your-encryption-key"  # For token encryption at rest

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="photo_archivist.log"